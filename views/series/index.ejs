<% include ../partials/header %>

    <section id="about">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 mx-auto">
            <h2>Series</h2>
            <p class="lead">All saved series 
              <a href="/series/new" class="btn btn-info">New Serie</a>
            </p>
            <table class="table table-hover">
              <% series.forEach( serie =>{ %>
                <tr>
                  <td> <%= serie.name %> </td>
                  <td> <%= labels.filter( label => label.id === serie.status )[0].name %> </td>
                  <td> 
                    <a href="/series/edit/<%= serie._id %>">Edit</a> |
                    <a href="/series/delete/<%= serie._id %>">Remove</a>
                  </td> 
                </tr>
              <% })%>
            </table>
          </div>
        </div>
      </div>
    </section>

<%include ../partials/footer%>
